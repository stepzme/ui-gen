generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String            @id @default(uuid())
  email                String            @unique
  password             String
  name                 String?
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt
  auditLogs            AuditLog[]        @relation("AuditActor")
  projectMemberships   ProjectMember[]
  workspaceMemberships WorkspaceMember[]
  documentViews        UserDocumentView[]
}

model Workspace {
  id        String            @id @default(uuid())
  name      String
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  projects  Project[]
  members   WorkspaceMember[]
}

model WorkspaceMember {
  id          String    @id @default(uuid())
  workspaceId String
  userId      String
  role        Role
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
}

model Project {
  id          String          @id @default(uuid())
  workspaceId String
  name        String
  isPersonal  Boolean         @default(false)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  documents   Document[]
  workspace   Workspace       @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  members     ProjectMember[]

  @@index([workspaceId, isPersonal])
}

model ProjectMember {
  id        String   @id @default(uuid())
  projectId String
  userId    String
  role      Role
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
}

model Document {
  id        String              @id @default(uuid())
  projectId String
  name      String
  slug      String
  data      Json
  trashedAt DateTime?
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt
  project   Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  pages     DocumentPage[]
  locks     Lock[]
  views     UserDocumentView[]

  @@unique([projectId, slug])
}

model DocumentPage {
  id         String   @id @default(uuid())
  documentId String
  name       String
  index      Int
  data       Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([documentId, name])
  @@unique([documentId, index])
}

model Lock {
  id         String    @id @default(uuid())
  scope      LockScope
  documentId String
  elementId  String?
  holderId   String
  ttlSeconds Int
  updatedAt  DateTime  @updatedAt
  createdAt  DateTime  @default(now())
  document   Document  @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
  @@index([documentId, elementId])
}

model AuditLog {
  id         String      @id @default(uuid())
  action     AuditAction
  actorId    String?
  entityType String
  entityId   String
  diff       Json?
  createdAt  DateTime    @default(now())
  actor      User?       @relation("AuditActor", fields: [actorId], references: [id])

  @@index([entityType, entityId])
}

model UserDocumentView {
  id         String   @id @default(uuid())
  userId     String
  documentId String
  lastViewedAt DateTime @default(now())
  lastEditedAt DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([userId, documentId])
  @@index([userId, lastEditedAt])
  @@index([documentId])
}

enum Role {
  OWNER
  ADMIN
  EDITOR
  VIEWER
}

enum LockScope {
  DOCUMENT
  ELEMENT
}

enum AuditAction {
  AUTH_LOGIN
  AUTH_LOGOUT
  PERMISSIONS_CHANGED
  CREATE
  UPDATE
  DELETE
  DOCUMENT_CREATED
  DOCUMENT_UPDATED
  DOCUMENT_TRASHED
  DOCUMENT_RESTORED
  LOCK_ACQUIRE
  LOCK_RELEASE
  EXPORT_REQUESTED
  EXPORT_COMPLETED
  PERMISSION_CHANGE
  EXPORT
}
